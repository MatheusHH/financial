<div class="row">	
  <div class="col-xl-6 col-sm-6 mb-3">
    <div class="card card shadow p-3 mb-5">
      <div class="card-body">
      	<%= pie_chart @expenses.group("categories.name").sum("(value_cents/100.00)"), prefix: "R$", thousands: ".", decimal: ",", donut: true, round: 2, zeros: true %>
      </div>
    </div>
  </div>

  <div class="col-xl-6 col-sm-6 mb-3">
    <div class="card card shadow p-3 mb-5">
      <div class="card-body">
      	<%= pie_chart @incomes.group("kinds.name").sum("(value_cents/100.00)"), prefix: "R$", thousands: ".", decimal: ",", donut: true, round: 2, zeros: true %>
      </div>
    </div>
  </div>

  <div class="col-xl-6 col-sm-6 mb-3">
    <div class="card card shadow p-3 mb-5">
      <div class="card-body">
      	<%= bar_chart @expenses_total.group_by_month(:created_at, format: "%b %Y", last: 12).sum("(value_cents/100.00)"), prefix: "R$", thousands: ".", decimal: ",", donut: true, round: 2, zeros: true %>
      </div>
    </div>
  </div>

  <div class="col-xl-6 col-sm-6 mb-3">
    <div class="card card shadow p-3 mb-5">
      <div class="card-body">
      	<%= bar_chart @incomes_total.group_by_month(:created_at, format: "%b %Y", last: 12).sum("(value_cents/100.00)"), prefix: "R$", thousands: ".", decimal: ",", donut: true, round: 2, zeros: true %>
      </div>
    </div>
  </div>

</div>
<hr>
