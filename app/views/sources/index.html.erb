<h1>Sources</h1>
<div class="card">  
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-dark">
        <thead>
          <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>User</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @sources.each do |source| %>
            <tr>
              <td><%= source.name %></td>
              <td><%= source.phone %></td>
              <td><%= source.user.name %></td>
              <td><%= link_to edit_source_path(source), class: "btn btn-info btn-circle" do %><i class="fa fa-edit"></i><% end %>
              <%= link_to source_path(source), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: 'Are you sure?' } do  %> <i class="fa fa-trash"></i> <% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <%= link_to 'New Source', new_source_path, class: "btn btn-primary" %>
  </div>
</div>
