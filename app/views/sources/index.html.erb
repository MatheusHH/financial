<h1><%= @sources.model_name.human(count: 2) %></h1>
<div class="card shadow p-3 mb-5">  
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-dark">
        <thead>
          <tr>
            <th><%= @sources.human_attribute_name("name") %></th>
            <th><%= @sources.human_attribute_name("phone") %></th>
            <th><%= @sources.human_attribute_name("user") %></th>
            <th><%= t('helpers.submit.actions') %></th>
          </tr>
        </thead>

        <tbody>
          <% @sources.each do |source| %>
            <tr>
              <td><%= source.name %></td>
              <td><%= source.phone %></td>
              <td><%= source.user.name %></td>
              <td><%= link_to edit_source_path(source), class: "btn btn-info btn-circle" do %><i class="fa fa-edit"></i><% end %>
              <%= link_to source_path(source), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: 'Are you sure?' } do  %> <i class="fa fa-trash"></i> <% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <%= link_to t('actions.new(a)', model: @sources.model_name.human), new_source_path, class: "btn btn-primary" %>
  </div>
</div>
