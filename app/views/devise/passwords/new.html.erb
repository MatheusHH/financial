<div class="container">
  <div class="card card-login mx-auto mt-5 shadow p-3 mb-5">
    <div class="card-header">Forgot your password?</div>
    <div class="card-body">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= render "devise/shared/error_messages", resource: resource %>

	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: "required" %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Send me reset password instructions", class: "btn btn-block btn-primary" %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
