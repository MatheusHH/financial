<div class="modal fade" id="newAccountModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= t("actions.new(a)", model: @account.model_name.human) %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @account, remote: true) do |form| %>
          <% if @account.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

              <ul>
              <% @account.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row">
            <div class="col-sm-3">
              <div class="form-group">
                <%= form.label :agency_number %>
                <%= form.text_field :agency_number, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-4">
              <div class="form-group">
                <%= form.label :account_number %>
                <%= form.text_field :account_number, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-5">
              <div class="form-group">
                <%= form.label :bank %>
                <%= form.text_field :bank, class: "form-control", required: "required"  %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <%= form.label :balance %>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><%= @account.balance.currency.symbol %></span>
                    <%= form.text_field :balance, class: "form-control", readonly: "readonly"  %>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="modal-footer">
            <%= form.submit t("helpers.submit.create"), class: "btn btn-primary" %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
          </div>
        <% end %>        
      </div>
    </div>
  </div>
</div>