<!DOCTYPE html>
<html>
  <head>
    <title>Financial</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">


    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag "icon.png" %>
  </head>

  <body id="page-top">
    <%= render partial: "layouts/shared/navigation" %>
    <div id="wrapper">
      <!-- Sidebar -->
      <ul class="sidebar navbar-nav">
        <li class="nav-item">
          <%= link_to home_index_path, class: "nav-link" do %>
            <i class="fa fa-fw fa-tachometer"></i>
            <span>Dashboard</span>
          <% end %>
        </li>

        <li class="nav-item">
          <% if policy(current_user).index? %>
            <%= link_to users_path, class: "nav-link" do %>
              <i class="fa fa-users"></i>
              <span><%= t('views.user')%></span>
            <% end %>
          <% end %>
        </li>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-fw fa-money"></i>
            <span><%= t('views.expense')%></span>
          </a>
          <div class="dropdown-menu" aria-labelledby="pagesDropdown">
            <h6 class="dropdown-header"><%= t('views.option')%>:</h6>
            <div class="dropdown-divider"></div>
            <%= link_to suppliers_path, class: "dropdown-item" do %>
              <span><%= t('views.supplier')%></span>
            <% end %>

            <div class="dropdown-divider"></div>
            <%= link_to categories_path, class: "dropdown-item" do %>
              <span><%= t('views.category')%></span>
            <% end %>

            <div class="dropdown-divider"></div>
            <%= link_to expenses_path, class: "dropdown-item" do %>
              <span><%= t('views.expense')%></span>
            <% end %>
            
          </div>
        </li>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-fw fa-money"></i>
            <span><%= t('views.revenue')%></span>
          </a>
          <div class="dropdown-menu" aria-labelledby="pagesDropdown">
            <h6 class="dropdown-header"><%= t('views.option')%>:</h6>

            <div class="dropdown-divider"></div>
            <%= link_to incomes_path, class: "dropdown-item" do %>
              <span><%= t('views.income')%></span>
            <% end %>

            <div class="dropdown-divider"></div>
            <%= link_to sources_path, class: "dropdown-item" do %>
              <span><%= t('views.source')%></span>
            <% end %>

            <div class="dropdown-divider"></div>
            <%= link_to kinds_path, class: "dropdown-item" do %>
              <span><%= t('views.kind')%></span>
            <% end %>
            
          </div>
        </li>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-fw fa-credit-card"></i>
            <span><%= t('views.card')%></span>
          </a>
          <div class="dropdown-menu" aria-labelledby="pagesDropdown">
            <h6 class="dropdown-header"><%= t('views.option')%>:</h6>
            <div class="dropdown-divider"></div>  
            <%= link_to cards_path, class: "dropdown-item" do %>
              <span><%= t('views.credit_card')%></span></a>
            <% end %>
          

            <div class="dropdown-divider"></div>
            <%= link_to expense_cards_path, class: "dropdown-item" do %>
              <span><%= t('views.expense_card')%></span></a>
            <% end %> 

            <div class="dropdown-divider"></div>
            <%= link_to invoice_index_path, class: "dropdown-item" do %>
              <span><%= t('views.invoice')%></span></a>
            <% end %>

            <div class="dropdown-divider"></div>
            <%= link_to payment_cards_path, class: "dropdown-item" do %>
              <span><%= t('views.payment_card')%></span></a>
            <% end %>

          </div>
        </li>

        <li class="nav-item">
          <%= link_to accounts_path, class: "nav-link" do %>
            <i class="fa fa-fw fa-briefcase"></i>
            <span><%= t('views.account')%></span></a>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to transfers_path, class: "nav-link" do %>
            <i class="fa fa-fw fa-exchange"></i>
            <span><%= t('views.transfer')%></span></a>
          <% end %>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="charts.html">
            <i class="fa fa-fw fa-area-chart"></i>
            <span><%= t('views.chart')%></span></a>
        </li>

      </ul>

      <div id="content-wrapper">

        <div class="container-fluid">

          <!-- Breadcrumbs-->
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="index.html">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Blank Page</li>
          </ol>
          <%= render 'layouts/shared/messages' %>
          <!-- Page Content -->
          <hr>
          <div class="d-flex justify-content-center">
            <div class="spinner-grow" role="status">
              <span class="sr-only">Loading...</span>
            </div>
          </div>
          <%= yield %>
        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright Â© Your Website 2019</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->  
    </div>
    <!-- /#wrapper -->
  </body>
</html>
