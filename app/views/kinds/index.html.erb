<h1>Kinds</h1>
<div class="card">  
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-dark">
        <thead>
          <tr>
            <th>Name</th>
            <th>User</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @kinds.each do |kind| %>
            <tr>
              <td><%= kind.name %></td>
              <td><%= kind.user.name %></td>
              <td><%= link_to edit_kind_path(kind), class: "btn btn-info btn-circle" do %><i class="fa fa-edit"></i><% end %>
              <%= link_to kind_path(kind), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: 'Are you sure?' } do  %> <i class="fa fa-trash"></i> <% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <%= link_to 'New Kind', new_kind_path, class: "btn btn-primary" %>
  </div>
</div>
