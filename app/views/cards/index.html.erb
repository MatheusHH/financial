<h1><%= @cards.model_name.human(count: 2) %></h1>
<div class="card shadow p-3 mb-5">  
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-dark">
        <thead>
          <tr>
            <th><%= @cards.human_attribute_name("card_name") %></th>
            <th><%= @cards.human_attribute_name("closing_day") %></th>
            <th><%= @cards.human_attribute_name("invoice_day") %></th>
            <th><%= @cards.human_attribute_name("balance_card") %></th>
            <th><%= @cards.human_attribute_name("limit_value") %></th>
            <th><%= @cards.human_attribute_name("user") %></th>
            <th><%= t('helpers.submit.actions') %></th>
          </tr>
        </thead>

        <tbody>
          <% @cards.each do |card| %>
            <tr>
              <td><%= card.card_name %></td>
              <td><%= card.closing_day %></td>
              <td><%= card.invoice_day %></td>
              <td><%= card.balance_card %></td>
              <td><%= card.limit_value %></td>
              <td><%= card.user.name %></td>
              <td><%= link_to edit_card_path(card), class: "btn btn-info btn-circle" do %><i class="fa fa-edit"></i><% end %>
              <%= link_to card_path(card), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: 'Are you sure?' } do  %> <i class="fa fa-trash"></i> <% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>
    <%= link_to t('actions.new', model: @cards.model_name.human), new_card_path, class: "btn btn-primary" %>
  </div>
</div>
