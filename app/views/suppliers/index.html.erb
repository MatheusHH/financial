<h1>Suppliers</h1>
<div class="card">  
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-dark">
        <thead>
          <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>User</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @suppliers.each do |supplier| %>
            <tr>
              <td><%= supplier.name %></td>
              <td><%= supplier.phone %></td>
              <td><%= supplier.user.name %></td>
              <td><%= link_to edit_supplier_path(supplier), class: "btn btn-info btn-circle" do %><i class="fa fa-edit"></i><% end %>
              <%= link_to supplier_path(supplier), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: 'Are you sure?' } do  %> <i class="fa fa-trash"></i> <% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <%= link_to 'New Supplier', new_supplier_path, class: "btn btn-primary" %>
  </div>
</div>
