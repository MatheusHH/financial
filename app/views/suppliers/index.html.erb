<h1><%= @suppliers.model_name.human(count: 2) %></h1>
<div class="card shadow p-3 mb-5">  
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-dark">
        <thead>
          <tr>
            <th><%= @suppliers.human_attribute_name("name") %></th>
            <th><%= @suppliers.human_attribute_name("phone") %></th>
            <th><%= @suppliers.human_attribute_name("user") %></th>
            <th><%= t('helpers.submit.actions') %></th>
          </tr>
        </thead>

        <tbody>
          <% @suppliers.each do |supplier| %>
            <tr>
              <td><%= supplier.name %></td>
              <td><%= supplier.phone %></td>
              <td><%= supplier.user.name %></td>
              <td><%= link_to edit_supplier_path(supplier), class: "btn btn-info btn-circle" do %><i class="fa fa-edit"></i><% end %>
              <%= link_to supplier_path(supplier), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: 'Are you sure?' } do  %> <i class="fa fa-trash"></i> <% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <%= link_to t('actions.new', model: @suppliers.model_name.human), new_supplier_path, class: "btn btn-primary" %>
  </div>
</div>
