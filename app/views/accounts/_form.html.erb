<div class="card shadow p-3 mb-5">
  <div class="card-body"> 
    <%= form_with(model: account, local: true) do |form| %>
      <% if account.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>

          <ul>
          <% account.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-sm-3">
          <div class="form-group">
            <%= form.label :agency_number %>
            <%= form.text_field :agency_number, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <%= form.label :account_number %>
            <%= form.text_field :account_number, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-5">
          <div class="form-group">
            <%= form.label :bank %>
            <%= form.text_field :bank, class: "form-control"  %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <%= form.label :balance %>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text"><%= account.balance.currency.symbol %></span>
                <%= form.text_field :balance, class: "form-control"  %>
              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="actions">
        <%= form.submit t("helpers.submit.create"), class: "btn btn-primary" %>
        <%= link_to t("actions.back"), accounts_path, class: "btn btn-success" %>
      </div>
    <% end %>
  </div> 
</div>
