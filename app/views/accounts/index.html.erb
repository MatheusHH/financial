<h1>Accounts</h1>
<div class="card"> 
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-dark">
        <thead>
          <tr>
            <th>Agency number</th>
            <th>Account number</th>
            <th>Bank</th>
            <th>Balance</th>
            <th>User</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @accounts.each do |account| %>
            <tr>
              <td><%= account.agency_number %></td>
              <td><%= account.account_number %></td>
              <td><%= account.bank %></td>
              <td><%= account.balance %></td>
              <td><%= account.user.name %></td>
              <td><%= link_to edit_account_path(account), class: "btn btn-info btn-circle" do %><i class="fa fa-edit"></i><% end %>
              <%= link_to account_path(account), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: 'Are you sure?' } do  %> <i class="fa fa-trash"></i> <% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <%= link_to 'New Account', new_account_path, class: "btn btn-primary" %>
  </div>
</div>
